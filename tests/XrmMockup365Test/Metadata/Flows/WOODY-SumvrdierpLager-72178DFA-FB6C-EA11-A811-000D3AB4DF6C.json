          "foreach": "@outputs('Hent_leverancer')?['body/value']",
          "actions": {
            "Increment_mængde_leverance": {
              "runAfter": {
              },
              "type": "IncrementVariable",
              "inputs": {
                "name": "Sum mængde",
                "value": "@if(contains(item(),'hofor_aktueltmestkorrektmaengdevaerdi'),item()['hofor_aktueltmestkorrektmaengdevaerdi'],0.0)"
