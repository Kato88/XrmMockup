              },
              "type": "IncrementVariable",
              "inputs": {
                "name": "Sum brændværdi",
                "value": "@if(and(contains(item(),'hofor_braendvaerdigjtons'),contains(item(),'hofor_aktueltmestkorrektmaengdevaerdi')),mul(item()['hofor_braendvaerdigjtons'],item()['hofor_aktueltmestkorrektmaengdevaerdi']),if(and(contains(item(),'hofor_forventetbraendvrdigjtons'),contains(item(),'hofor_aktueltmestkorrektmaengdevaerdi')),mul(item()['hofor_forventetbraendvrdigjtons'],item()['hofor_aktueltmestkorrektmaengdevaerdi']),0.0))"
              }
            },
            "Increment_omkostning_leverance": {
              "runAfter": {
                "Increment_brændværdi_leverance": [
                  "Succeeded"
                ]
              },
              "type": "IncrementVariable",
              "inputs": {
                "name": "Sum omkostning",
                "value": "@if(contains(item(),'hofor_leveranceomkostning'),item()['hofor_leveranceomkostning'],0.0)"
              }
            }
          },
          "runAfter": {
            "Hent_leverancer": [
              "Succeeded"
            ]
          },
          "type": "Foreach"
        },
        "Loop_lagerlinjer": {
          "foreach": "@outputs('Hent_lagerlinjer')?['body/value']",
          "actions": {
            "Increment_mængde_lagerlinje": {
              "runAfter": {
              },
              "type": "IncrementVariable",
              "inputs": {
                "name": "Sum mængde",
                "value": "@if(contains(item(), 'hofor_maengdetons'), item()['hofor_maengdetons'], 0.0)"
              }
            },
            "Increment_brændværdi_lagerlinje": {
              "runAfter": {
                "Increment_mængde_lagerlinje": [
                  "Succeeded"
                ]
              },
              "type": "IncrementVariable",
              "inputs": {
                "name": "Sum brændværdi",
                "value": "@if(contains(item(), 'hofor_braendvaerditotalprleverancegj'), item()['hofor_braendvaerditotalprleverancegj'], 0.0)"
